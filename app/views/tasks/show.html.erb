<h2 class="text-center py-3 border-bottom bg-secondary">Task: <%= @task.title.capitalize %></h2>
<div class="border-bottom">
  <p class="text-center">Description: <%= @task.details.capitalize %></p>
  <p class="text-center">Status: <%= @task.completed ? "Completed" : "Ongoing" %></p>
</div>

<div class="d-flex justify-content-center">
  <%= link_to "Edit", edit_path(@task), class:"btn btn-success m-3" %>
  <%= link_to "Back", tasks_path, class:"btn btn-primary m-3" %>
</div>
