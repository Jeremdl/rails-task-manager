<div class="d-flex align-items-center py-3">
  <%= form_with model: @task do |f| %>
    <div class="my-2">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="my-2">
      <%= f.label :details %>
      <%= f.text_field :details %>
    </div>
    <div class="my-2">
      <%= f.label :completed %>
      <%= f.check_box :completed %>
    </div>
    <%= f.submit %>
  <% end %>
</div>
<div>
  <%= link_to "Back", tasks_path, class:"btn btn-primary my-2" %>
</div>
